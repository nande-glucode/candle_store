<!-- app/views/admin/products/index.html.erb -->
<div class="min-h-screen bg-gradient-to-br from-nude-100 to-cream-200 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="sm:flex sm:items-center sm:justify-between">
        <div>
          <h1 class="text-3xl font-bold text-brown-800">Admin Dashboard</h1>
          <p class="mt-2 text-brown-600">Manage your candle inventory and store</p>
        </div>
        <div class="mt-4 sm:mt-0">
          <%= link_to new_admin_product_path, class: "bg-brown-700 text-cream-100 hover:bg-brown-800 px-6 py-3 rounded-lg font-semibold transition-all duration-200 inline-flex items-center shadow-lg hover:shadow-xl" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add New Candle
          <% end %>
        </div>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <!-- Total Products -->
      <div class="bg-cream-100/80 backdrop-blur-sm rounded-xl shadow-lg border border-brown-300 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-brown-600 to-brown-700 rounded-xl flex items-center justify-center shadow-md">
              <svg class="w-6 h-6 text-cream-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
              </svg>
            </div>
          </div>
          <div class="ml-5">
            <p class="text-sm font-semibold text-brown-600 uppercase tracking-wide">Total Products</p>
            <p class="text-2xl font-bold text-brown-800"><%= @total_products %></p>
          </div>
        </div>
      </div>

      <!-- In Stock -->
      <div class="bg-cream-100/80 backdrop-blur-sm rounded-xl shadow-lg border border-brown-300 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-green-600 to-green-700 rounded-xl flex items-center justify-center shadow-md">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
          </div>
          <div class="ml-5">
            <p class="text-sm font-semibold text-brown-600 uppercase tracking-wide">In Stock</p>
            <p class="text-2xl font-bold text-brown-800"><%= Product.available.count %></p>
          </div>
        </div>
      </div>

      <!-- Featured -->
      <div class="bg-cream-100/80 backdrop-blur-sm rounded-xl shadow-lg border border-brown-300 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-earth-600 to-earth-700 rounded-xl flex items-center justify-center shadow-md">
              <svg class="w-6 h-6 text-cream-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
              </svg>
            </div>
          </div>
          <div class="ml-5">
            <p class="text-sm font-semibold text-brown-600 uppercase tracking-wide">Featured</p>
            <p class="text-2xl font-bold text-brown-800"><%= Product.featured.count %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-8">
      <%= link_to new_admin_product_path, class: "bg-brown-600 text-cream-100 hover:bg-brown-700 p-4 rounded-lg transition-all duration-200 text-center group" do %>
        <svg class="w-8 h-8 mx-auto mb-2 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        <p class="font-semibold">Add Product</p>
      <% end %>

      <%= link_to admin_logo_path, class: "bg-brown-600 text-cream-100 hover:bg-brown-700 p-4 rounded-lg transition-all duration-200 text-center group" do %>
        <svg class="w-8 h-8 mx-auto mb-2 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        <p class="font-semibold">Manage Logo</p>
      <% end %>

      <%= link_to root_path, class: "bg-brown-600 text-cream-100 hover:bg-brown-700 p-4 rounded-lg transition-all duration-200 text-center group" do %>
        <svg class="w-8 h-8 mx-auto mb-2 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
        </svg>
        <p class="font-semibold">View Store</p>
      <% end %>
    </div>

    <!-- Products List -->
    <div class="bg-cream-100/60 backdrop-blur-sm rounded-xl shadow-lg border border-brown-300 overflow-hidden">
      <div class="px-6 py-4 bg-gradient-to-r from-brown-600 to-brown-700">
        <h2 class="text-xl font-semibold text-cream-100">Product Inventory</h2>
      </div>

      <% if @products.any? %>
        <div class="divide-y divide-brown-200">
          <% @products.each do |product| %>
            <div class="px-8 py-8 hover:bg-brown-50 transition-colors duration-200">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-12">
                  <!-- Product Image -->
                  <div class="flex-shrink-0">
                    <% if product.primary_image %>
                      <div class="h-24 w-24 bg-gradient-to-br from-nude-200 to-cream-300 rounded-xl overflow-hidden border-2 border-brown-300 shadow-md">
                        <img src="<%= url_for(product.primary_image) %>" 
                             alt="<%= product.name %>"
                             class="h-full w-full object-cover">
                      </div>
                    <% else %>
                      <div class="h-24 w-24 bg-gradient-to-br from-nude-200 to-cream-300 rounded-xl flex items-center justify-center border-2 border-brown-300 shadow-md">
                        <div class="w-8 h-10 bg-brown-600 rounded-sm relative">
                          <div class="w-2 h-2 bg-cream-100 rounded-full absolute top-1 left-3"></div>
                        </div>
                      </div>
                    <% end %>
                  </div>
                  
                  <!-- Product Info -->
                  <div class="flex-1">
                    <div class="flex items-center space-x-3">
                      <h3 class="text-lg font-semibold text-brown-800"><%= product.name %></h3>
                      <% if product.featured? %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-gradient-to-r from-earth-600 to-earth-700 text-cream-100 shadow-sm">
                          Featured
                        </span>
                      <% end %>
                    </div>
                    <div class="mt-2 flex items-center space-x-4 text-sm">
                      <span class="text-brown-600 font-medium"><%= product.category.titleize %></span>
                      <span class="text-brown-400">•</span>
                      <span class="<%= product.stock_status_class %> font-medium">
                        <%= product.stock_quantity %> in stock
                      </span>
                      <span class="text-brown-400">•</span>
                      <span class="font-semibold text-brown-800"><%= product.formatted_price %></span>
                    </div>
                  </div>
                </div>
                
                <!-- Actions -->
                <div class="flex items-center space-x-3">
                  <%= link_to manage_images_admin_product_path(product), 
                      class: "bg-brown-200 text-brown-800 hover:bg-brown-300 px-4 py-2 rounded-lg font-medium text-sm transition-all duration-200 inline-flex items-center shadow-sm hover:shadow-md" do %>
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    Images
                  <% end %>
                  
                  <%= link_to edit_admin_product_path(product), 
                      class: "bg-brown-600 text-cream-100 hover:bg-brown-700 px-4 py-2 rounded-lg font-medium text-sm transition-all duration-200 inline-flex items-center shadow-sm hover:shadow-md" do %>
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Edit
                  <% end %>

                  <%= link_to admin_product_path(product), 
                      class: "bg-nude-200 text-brown-800 hover:bg-nude-300 px-4 py-2 rounded-lg font-medium text-sm transition-all duration-200 inline-flex items-center shadow-sm hover:shadow-md" do %>
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                    View
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-16">
          <div class="w-24 h-32 bg-brown-600/20 rounded-xl flex items-center justify-center mb-6 mx-auto border-2 border-brown-400">
            <div class="w-12 h-16 bg-brown-600 rounded-lg relative shadow-lg">
              <div class="w-3 h-3 bg-cream-100 rounded-full absolute top-2 left-4.5"></div>
            </div>
          </div>
          <h3 class="text-xl font-semibold text-brown-800 mb-2">No candles in your inventory</h3>
          <p class="text-brown-600 mb-8 max-w-md mx-auto">
            Start building your candle collection by adding your first handcrafted product.
          </p>
          <%= link_to new_admin_product_path, class: "bg-brown-700 text-cream-100 hover:bg-brown-800 px-6 py-3 rounded-lg font-semibold transition-all duration-200 inline-flex items-center shadow-lg hover:shadow-xl" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add Your First Candle
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>