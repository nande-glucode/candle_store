<!-- app/views/devise/registrations/new.html.erb -->
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-brown-800 via-brown-700 to-earth-700 py-12 px-4 sm:px-6 lg:px-8">
  <div class="absolute inset-0 bg-black/25"></div>
  <div class="relative max-w-md w-full space-y-8">
    <!-- Header -->
    <div class="text-center">
      <div class="w-20 h-20 bg-gradient-to-br from-cream-100 to-nude-200 rounded-2xl flex items-center justify-center mb-6 mx-auto shadow-xl border border-brown-600">
        <div class="w-8 h-10 bg-brown-800 rounded-lg relative shadow-lg">
          <div class="w-2 h-2 bg-cream-100 rounded-full absolute top-1 left-3"></div>
        </div>
      </div>
      <h2 class="mt-6 text-3xl font-bold text-cream-100">
        Create your account
      </h2>
      <p class="mt-2 text-sm text-cream-200">
        Join our candle community
      </p>
    </div>

    <!-- Form -->
    <div class="bg-cream-100/95 backdrop-blur-sm rounded-2xl shadow-2xl border border-brown-500/20 p-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-6") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Name Fields -->
        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :first_name, class: "block text-sm font-medium text-brown-800 mb-2" %>
            <%= f.text_field :first_name, autofocus: true, 
                class: "w-full px-4 py-3 bg-nude-100 border-2 border-brown-400 rounded-lg focus:border-brown-700 focus:bg-cream-50 focus:outline-none transition-all duration-200" %>
          </div>
          <div>
            <%= f.label :last_name, class: "block text-sm font-medium text-brown-800 mb-2" %>
            <%= f.text_field :last_name, 
                class: "w-full px-4 py-3 bg-nude-100 border-2 border-brown-400 rounded-lg focus:border-brown-700 focus:bg-cream-50 focus:outline-none transition-all duration-200" %>
          </div>
        </div>

        <!-- Email -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-brown-800 mb-2" %>
          <%= f.email_field :email, autocomplete: "email", 
              class: "w-full px-4 py-3 bg-nude-100 border-2 border-brown-400 rounded-lg focus:border-brown-700 focus:bg-cream-50 focus:outline-none transition-all duration-200" %>
        </div>

        <!-- Password -->
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-brown-800 mb-2" %>
          <%= f.password_field :password, autocomplete: "new-password", 
              class: "w-full px-4 py-3 bg-nude-100 border-2 border-brown-400 rounded-lg focus:border-brown-700 focus:bg-cream-50 focus:outline-none transition-all duration-200" %>
          <% if @minimum_password_length %>
            <p class="mt-1 text-xs text-brown-600">Minimum <%= @minimum_password_length %> characters</p>
          <% end %>
        </div>

        <!-- Password Confirmation -->
        <div>
          <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-brown-800 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", 
              class: "w-full px-4 py-3 bg-nude-100 border-2 border-brown-400 rounded-lg focus:border-brown-700 focus:bg-cream-50 focus:outline-none transition-all duration-200" %>
        </div>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Create Account", class: "w-full bg-brown-800 text-cream-100 hover:bg-earth-800 py-3 px-4 rounded-lg text-lg font-semibold transition-all duration-300 shadow-lg hover:shadow-xl" %>
        </div>
      <% end %>

      <!-- Login Link -->
      <div class="text-center mt-6 pt-6 border-t border-brown-300">
        <p class="text-sm text-brown-600">
          Already have an account?
          <%= link_to "Sign in", new_session_path(resource_name), class: "font-medium text-brown-700 hover:text-brown-800 transition-colors duration-200" %>
        </p>
      </div>
    </div>
  </div>
</div>