<!-- Hero Section -->
<section class="relative bg-gradient-to-br from-brown-800 via-brown-700 to-earth-700 text-white overflow-hidden">
  <div class="absolute inset-0 bg-black/25"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 sm:py-32">
    <div class="text-center animate-slide-up">
      <h1 class="text-4xl sm:text-6xl font-bold mb-6">
        Premium Handcrafted
        <span class="block text-cream-200">Candles</span>
      </h1>
      <p class="text-xl sm:text-2xl mb-8 text-cream-100 max-w-3xl mx-auto">
        Discover our collection of artisanal candles made with natural ingredients and love
      </p>
      <%= link_to products_path, class: 'bg-cream-100 text-brown-800 hover:bg-cream-200 hover:text-brown-900 text-lg px-8 py-4 inline-flex items-center rounded-lg font-semibold transition-all duration-300 shadow-lg hover:shadow-xl' do %>
        <span>Shop Collection</span>
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      <% end %>
    </div>
  </div>
  
  <!-- Elegant decorative elements -->
  <div class="absolute top-20 left-10 w-3 h-3 bg-cream-200/20 rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
  <div class="absolute top-32 right-20 w-2 h-2 bg-nude-100/30 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
  <div class="absolute bottom-20 left-1/4 w-1.5 h-1.5 bg-cream-100/40 rounded-full animate-pulse" style="animation-delay: 1.5s;"></div>
</section>

<!-- Categories Section -->
<section class="py-16 sm:py-24 bg-gradient-to-b from-nude-100 to-cream-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-brown-800 mb-4">
        Shop by <span class="text-brown-700 font-bold">Category</span>
      </h2>
      <p class="text-lg text-brown-600 max-w-2xl mx-auto">
        Find the perfect scent for every mood and occasion
      </p>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
      <% @categories_with_counts.each do |category, count| %>
        <div class="bg-cream-100 rounded-xl p-6 sm:p-8 text-center group hover:bg-gradient-to-br hover:from-nude-200 hover:to-cream-200 transition-all duration-300 border border-brown-300 shadow-sm hover:shadow-lg">
          <%= link_to products_path(category: category), class: 'block' do %>
            <div class="text-3xl sm:text-4xl mb-4 group-hover:scale-110 transition-transform duration-300">
              <%= category_emoji(category) %>
            </div>
            <h3 class="text-lg sm:text-xl font-semibold text-brown-800 mb-2 group-hover:text-brown-700 transition-colors duration-200">
              <%= category.titleize %>
            </h3>
            <p class="text-brown-600 mb-4 text-sm sm:text-base">
              <%= pluralize(count, 'candle') %> available
            </p>
            <span class="text-brown-700 font-medium group-hover:underline inline-flex items-center justify-center">
              Explore Collection 
              <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Featured Products -->
<% if @featured_products.any? %>
  <section class="py-16 sm:py-24 bg-gradient-to-br from-cream-200 to-nude-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-brown-800 mb-4">
          <span class="text-brown-700 font-bold">Featured</span> Candles
        </h2>
        <p class="text-lg text-brown-600 max-w-2xl mx-auto">
          Hand-picked favorites that our customers love most
        </p>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        <% @featured_products.each do |product| %>
          <%= render 'shared/product_card', product: product %>
        <% end %>
      </div>
      
      <div class="text-center mt-12">
        <%= link_to products_path, class: 'bg-brown-700 text-cream-100 hover:bg-brown-800 px-6 sm:px-8 py-3 sm:py-4 rounded-lg text-base sm:text-lg font-semibold transition-all duration-300 inline-flex items-center shadow-lg hover:shadow-xl' do %>
          View All Products
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        <% end %>
      </div>
    </div>
  </section>
<% end %>

<!-- CTA Section -->
<section class="bg-gradient-to-r from-brown-800 via-earth-800 to-brown-700 text-white py-16 relative overflow-hidden">
  <div class="absolute inset-0 bg-black/15"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-2xl sm:text-3xl font-bold mb-4">Ready to Transform Your Space?</h2>
    <p class="text-lg sm:text-xl mb-8 text-cream-200 max-w-2xl mx-auto">Join thousands of satisfied customers who've made their homes more welcoming with our handcrafted candles</p>
    <%= link_to products_path, class: 'bg-cream-100 text-brown-800 hover:bg-cream-200 hover:text-brown-900 text-base sm:text-lg px-6 sm:px-8 py-3 sm:py-4 rounded-lg font-semibold transition-all duration-300 inline-flex items-center shadow-lg hover:shadow-xl' do %>
      Start Shopping Now
      <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    <% end %>
  </div>
</section>