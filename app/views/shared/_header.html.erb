<header class="bg-cream-50/95 backdrop-blur-md sticky top-0 z-50 border-b border-brown-800/20 shadow-lg">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <%= link_to root_path, class: 'flex items-center space-x-3 group flex-shrink-0' do %>
        <% logo_setting = Setting.site_logo %>
        <% if logo_setting.logo_attached? %>
          <div class="w-10 h-10 bg-white rounded-lg border-2 border-brown-300 flex items-center justify-center overflow-hidden group-hover:scale-105 transition-transform duration-300 shadow-md">
            <%= image_tag logo_setting.logo, alt: "Store Logo", class: "max-w-full max-h-full object-contain" %>
          </div>
        <% else %>
          <div class="w-10 h-10 bg-gradient-to-br from-brown-800 to-earth-700 rounded-lg flex items-center justify-center group-hover:scale-105 transition-transform duration-300 shadow-md">
            <div class="w-4 h-6 bg-cream-100 rounded-sm relative">
              <div class="w-1 h-1 bg-brown-800 rounded-full absolute top-0 left-1.5"></div>
            </div>
          </div>
        <% end %>
        <div class="flex-shrink-0">
          <h1 class="text-2xl font-bold text-brown-800 group-hover:text-brown-900 transition-colors duration-300">
            Peace Hope & Candles
          </h1>
          <p class="text-xs text-brown-600 font-medium">Premium Handcrafted Candles</p>
        </div>
      <% end %>
      
      <!-- Desktop Navigation with more spacing -->
      <div class="hidden lg:flex items-center space-x-2 flex-shrink-0 ml-12">
        <%= link_to "Home", root_path, 
            class: "text-brown-700 hover:text-brown-900 hover:bg-brown-100 px-4 py-2 rounded-lg transition-all duration-200 font-medium #{'bg-brown-200 text-brown-900' if current_page?(root_path)}" %>
        <%= link_to "All Candles", products_path, 
            class: "text-brown-700 hover:text-brown-900 hover:bg-brown-100 px-4 py-2 rounded-lg transition-all duration-200 font-medium #{'bg-brown-200 text-brown-900' if current_page?(products_path)}" %>
      </div>
      
      <!-- Search -->
      <div class="flex-1 max-w-md mx-6 lg:mx-8">
        <%= form_with url: products_path, method: :get, class: 'relative group', local: true do |f| %>
          <div class="relative">
            <%= f.text_field :search, 
                placeholder: 'Search candles...', 
                value: params[:search],
                class: 'w-full pl-12 pr-4 py-3 bg-white border-2 border-brown-300 rounded-lg focus:border-brown-700 focus:outline-none transition-colors duration-200' %>
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-brown-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- User Authentication -->
      <div class="hidden lg:flex items-center space-x-3 flex-shrink-0">
        <% if user_signed_in? %>
          <!-- User Menu -->
          <div class="relative group">
            <button class="flex items-center space-x-2 text-brown-700 hover:text-brown-900 font-medium px-4 py-2 rounded-lg hover:bg-brown-100 transition-all duration-200">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              <span><%= current_user.first_name %></span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            
            <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 border border-brown-300">
              <div class="py-1">
                <%= link_to edit_user_registration_path, class: "block px-4 py-2 text-sm text-brown-700 hover:bg-brown-100 hover:text-brown-900" do %>
                  <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  My Profile
                <% end %>

                   <%= link_to cart_items_path, class: "block px-4 py-2 text-sm text-brown-700 hover:bg-brown-100 hover:text-brown-900" do %>
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.5 6M7 13l-1.5-6m0 0L5.4 5M7 13v8a2 2 0 002 2h6a2 2 0 002-2v-8m-8 0V9a2 2 0 012-2h4a2 2 0 012 2v4"/>
                  </svg>
                  My Cart (<%= current_user.cart_item_count %>)
                  <% end %>
                
                <% if current_user.admin? %>
                  <%= link_to admin_products_path, class: "block px-4 py-2 text-sm text-brown-700 hover:bg-brown-100 hover:text-brown-900" do %>
                    <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    Admin Panel
                  <% end %>
                  
                  <%= link_to admin_logo_path, class: "block px-4 py-2 text-sm text-brown-700 hover:bg-brown-100 hover:text-brown-900" do %>
                    <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    Manage Logo
                  <% end %>
                <% end %>
                
                <div class="border-t border-brown-300 my-1"></div>
                
                <%= link_to destroy_user_session_path, data: { "turbo-method": :delete }, class: "block px-4 py-2 text-sm text-brown-700 hover:bg-red-50 hover:text-red-600" do %>
                  <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                  </svg>
                  Sign Out
                <% end %>
              </div>
            </div>
          </div>
        <% else %>
          <!-- Guest Menu -->
          <%= link_to new_user_session_path, class: "bg-brown-200 text-brown-800 hover:bg-brown-300 px-4 py-2 rounded-lg font-medium text-sm transition-all duration-200" do %>
            <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
            </svg>
            Sign In
          <% end %>
          
          <%= link_to new_user_registration_path, class: "bg-brown-700 text-cream-100 hover:bg-brown-800 px-4 py-2 rounded-lg font-medium text-sm transition-all duration-200" do %>
            <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
            </svg>
            Sign Up
          <% end %>
        <% end %>
      </div>
    </div>
  </nav>
</header>